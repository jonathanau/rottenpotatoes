-#  This file is app/views/movies/index.html.haml
%h1 All Movies


= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "ratings_#{rating}", session[:ratings].include?(rating)
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      -# TODO: Is there a cleaner way to set the CSS class on %th without
      -#       duplicating the %a child?
      - if @hilite == :title.to_s
        %th.hilite
          %a#title_header{:href => movies_path(:order => :title)} Movie Title
      - else
        %th
          %a#title_header{:href => movies_path(:order => :title)} Movie Title
      %th Rating
      - if @hilite == :release_date.to_s
        %th.hilite
          %a#release_date_header{:href => movies_path(:order => :release_date)} Release Date
      - else
        %th
          %a#release_date_header{:href => movies_path(:order => :release_date)} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
